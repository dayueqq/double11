<script type="text/javascript">
function init(){
	/* 第二部分   左边图片展示  作者信息*/
	var contWidth=$('.content').width();
	$('.content').height(contWidth*0.43);
	
	/* 第二部分   左边图片展示  显示图片信息*/
	var width=$('.picCont').width();
	$('.picCont').height(width*0.8);
	
	var height=$('.left').height();
	$('.bigBox').css('marginTop',height*0.01);
	
	var picBoxWidth=$('.picBox').width();  /* 确定图片展示区的高度 */
	var picBoxHeight=picBoxWidth*0.63;
	$('.picBox').height(picBoxHeight);
	
	$('#rightImgBox').width($('#rightImg').width());   /* 确定 左右2个图片区的宽度 */
	var leftImgWidth=$('.picBox').width()-$('#rightImg').width()-2;
	$('#leftImgBox').width(leftImgWidth);
	//changeSize();
	
	
	/* 确定更多图片展示区的高度 */
	$('.otherBox').height($('.otherBox').parent().height()-picBoxHeight);
	$('.imgbox').height($('.otherBox').height()*0.8);
	$('.imgbox').width($('.imgbox').height()*1.3);
	$('.imgbox').css('marginTop',$('.otherBox').height()*0.1);
	
	//改变 Imgbox 中图片的大小
	var boxheight=$('.imgbox').height(); 
	var boxwidth=$('.imgbox').width();
	$('.imgbox img').each(function(){
		if($(this).width()>$(this).height()){
			$(this).css('height',boxheight);
			var left=(boxwidth-$(this).width())/2;
			$(this).css('marginLeft',left);
		}else{
			$(this).css('width',boxwidth);
			var top=(boxheight-$(this).height())/2;
			$(this).css('marginTop',top);
		}    
    });
}
function changeSize(){
	var leftImgWidth=$('#leftImgBox').width();
	if($('#leftImg').width()>$('#leftImg').height()){  /* 将左侧图片进行适当调整 */
		$('#leftImg').css('height',$('#leftImgBox').height());
		var left=-($('#leftImg').width()-leftImgWidth)/2;
		$('#leftImg').css('marginLeft',left);
	}else{
	
		$('#leftImg').css('width',leftImgWidth);
		var top=-($('#leftImg').height()-$('#leftImgBox').height())/2;
		$('#leftImg').css('marginTop',top);
	}
}
function assignOther(){
   var num=datajson.length;
   $('.imgbox img').each(function(i){
	   if(i<num){
	       $(this).attr('src',datajson[i].path);
	   }else{
		   $(this).parent().css('visibility','hidden');
	   }
   });
}
function assignPic(index){
	$('#authorPic').attr('src',datajson[index].authorpic);
	$('#contTitle').html(datajson[index].title);
	$('#contAuthor').html(datajson[index].author);
	$('#leftImg').attr('src',datajson[index].path);
	$('#cache').attr('src',datajson[index].path);  //放进缓存中
	$('#rightImg').attr('src',datajson[index].clothpath);
	$('#loves').html(datajson[index].love);
	$('#says').html(datajson[index].says);
	$('#views').html(datajson[index].views);
	$('.detail').html(datajson[index].detail);
	if(index==0){
		$('.box01 img:eq(0)').css('visibility','hidden');
	}else{
		$('.box01 img:eq(0)').css('visibility','visible');
	}
	if(index==datajson.length-1){
		$('.box01 img:eq(1)').css('visibility','hidden');
	}else{
		$('.box01 img:eq(1)').css('visibility','visible');
	}
	$('.box01 img:eq(0)').attr('onClick',"assignPic("+(index-1)+")");
	$('.box01 img:eq(1)').attr('onClick',"assignPic("+(index+1)+")");
	changeSizeOf(index);
}
function changeSizeOf(index){
	var leftImgWidth=$('#leftImgBox').width();
	var rate=$('#cache').width()/$('#cache').height();
	if(rate>1){  /* 将左侧图片进行适当调整 */
	//alert(rate);
	$('#leftImg').css('marginLeft',0);
		$('#leftImg').css('height',$('#leftImgBox').height());
		$('#leftImg').css('width',$('#leftImg').height()*rate);
		alert("width"+$('#leftImg').width());
		var left=-($('#leftImg').width()-leftImgWidth)/2;
		$('#leftImg').css('marginLeft',left);
	}else{
	    $('#leftImg').css('marginTop',0);
		$('#leftImg').css('width',leftImgWidth);
		$('#leftImg').css('height',$('#leftImg').width()/rate);
		alert("height"+$('#leftImg').height());
		var top=-($('#leftImg').height()-$('#leftImgBox').height())/2;
		$('#leftImg').css('marginTop',top);
	}
}
